    <script>
        let currentFilter = 'all';
        let allReports = [];

        // Initialize reports data
        function initializeReports() {
            allReports = Array.from(document.querySelectorAll('.report-item')).map(item => ({
                element: item,
                type: item.dataset.type,
                title: item.querySelector('.report-title').textContent.trim(),
                doctor: item.querySelector('.detail-value').textContent
            }));
        }

        // Switch tabs
        function switchTab(type, tabElement) {
            // Update active tab
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            tabElement.classList.add('active');

            currentFilter = type;
            filterReports();
        }

        // Filter reports
        function filterReports() {
            const reportItems = document.querySelectorAll('.report-item');

            reportItems.forEach(item => {
                const reportType = item.dataset.type;
                if (currentFilter === 'all' || reportType === currentFilter) {
                    item.style.display = 'flex';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        // Search reports
        function searchReports(query) {
            const reportItems = document.querySelectorAll('.report-item');
            const searchTerm = query.toLowerCase();

            reportItems.forEach(item => {
                const title = item.querySelector('.report-title').textContent.toLowerCase();
                const doctor = item.querySelector('.detail-value').textContent.toLowerCase();
                const reportId = item.querySelector('.meta-item').textContent.toLowerCase();

                const matches = title.includes(searchTerm) ||
                    doctor.includes(searchTerm) ||
                    reportId.includes(searchTerm);

                if (matches && (currentFilter === 'all' || item.dataset.type === currentFilter)) {
                    item.style.display = 'flex';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        // Action functions
        function requestNewReport() {
            alert('Request New Report functionality would be implemented here');
        }

        function toggleFilter() {
            alert('Filter options would be displayed here');
        }

        function toggleSort() {
            alert('Sort options would be displayed here');
        }

        function previewReport(reportId) {
            alert(`Preview functionality for report ${reportId} would be implemented here`);
        }

        function downloadReport(reportId) {
            alert(`Download functionality for report ${reportId} would be implemented here`);
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            initializeReports();
        });
    </script>
