                                    <option value="ophthalmology">Ophthalmology</option>
                                    <option value="ent">ENT (Ear, Nose, Throat)</option>
                                </select>
                            </div> -->

                            <!-- <div class="form-group">
                                <label for="radius">
                                    <i class="fas fa-ruler-combined"></i>
                                    Search Radius
                                </label>
                                <select id="radius" name="radius">
                                    <option value="5">Within 5 miles</option>
                                    <option value="10" selected>Within 10 miles</option>
                                    <option value="25">Within 25 miles</option>
                                    <option value="50">Within 50 miles</option>
                                </select>
                            </div> -->

                            <button type="submit" class="search-btn">
                                <i class="fas fa-search"></i>
                                Find Doctors
                            </button>
                        </form>
                    </div>

                    <div class="results-section" id="resultsSection" style="display: none;">
                        <h3>Search Results</h3>
                        <div id="doctorResults" class="doctor-results"></div>
                    </div>
                </div>

                <div class="map-section">
                    <div class="map-card">
                        <h2><i class="fas fa-map"></i> Healthcare Provider</h2>
                        <div class="doctor-results">
                            <% doctors.forEach((doctor)=> { %>
                                <div class="doctor-card">
                                    <div class="doctor-header">
                                        <div class="doctor-avatar">
                                            DR
                                        </div>
                                        <h2 class="doctor-name"></h2>
                                        <%= doctor.fullName %>
                                            </h2>
                                            <p class="doctor-specialty">
                                                <%= doctor.specialty %>
                                            </p>
                                    </div>

                                    <div class="doctor-info">
                                        <div class="info-item">
                                            <span class="info-icon">üìû</span>
                                            <span class="info-text">
                                                <%= doctor.email %>
                                            </span>
                                        </div>

                                        <div class="info-item">
                                            <span class="info-icon">üìç</span>
                                            <span class="info-text">
                                                <%= doctor.location %>
                                            </span>
                                        </div>
                                    </div>

                                    <button class="appointment-btn" onclick="bookAppointment()">
                                        Book Appointment
                                    </button>
                                </div>
                                <% }) %>
                        </div>
                    </div>

