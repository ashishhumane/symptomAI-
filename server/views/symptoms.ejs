    <script>
        // Form submission handling
        document.getElementById('symptomForm').addEventListener('submit', function(e) {
            // e.preventDefault();
            
            const symptomName = document.getElementById('symptomName').value;
            const severity = document.getElementById('severity').value;
            const duration = document.getElementById('duration').value;
            const loading = document.getElementById('loading');
            const successMessage = document.getElementById('successMessage');
            
            if (symptomName && severity && duration) {
                // Show loading animation
                loading.style.display = 'block';
                
                // Simulate processing time
                setTimeout(() => {
                    loading.style.display = 'none';
                    successMessage.style.display = 'block';
                    
                    // Reset form after showing success
                    setTimeout(() => {
                        this.reset();
                        successMessage.style.display = 'none';
                    }, 4000);
                    
                    // Log data for development
                    console.log('Symptom Report:', {
                        symptomName,
                        severity,
                        duration,
                        timestamp: new Date().toISOString(),
                        reportId: 'RPT-' + Date.now()
                    });
                }, 2000);
                
            } else {
                alert('‚ö†Ô∏è Please fill in all required fields before submitting.');
            }
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Header background change on scroll
        window.addEventListener('scroll', function() {
            const header = document.querySelector('.header');
            if (window.scrollY > 100) {
                header.style.background = 'rgba(102, 126, 234, 0.95)';
                header.style.backdropFilter = 'blur(10px)';
            } else {
                header.style.background = 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)';
                header.style.backdropFilter = 'none';
            }
        });

        // Add some interactive feedback
        document.querySelectorAll('.form-select').forEach(select => {
            select.addEventListener('change', function() {
                this.style.borderColor = '#27ae60';
                setTimeout(() => {
                    this.style.borderColor = '#667eea';
                }, 500);
            });
        });
