        }

        .feature-item:hover {
            transform: translateY(-5px);
            background: rgba(255,255,255,0.15);
        }

        .feature-item .icon {
            font-size: 44px;
            margin-bottom: 20px;
        }

        .feature-item h4 {
            font-size: 22px;
            margin-bottom: 15px;
        }

        /* Footer */
        .footer {
            background: #2c3e50;
            color: white;
            padding: 60px 20px 30px;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 40px;
        }

        .footer-section h4 {
            font-size: 20px;
            margin-bottom: 20px;
            color: #ecf0f1;
        }

        .footer-section p,
